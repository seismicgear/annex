{
  "productName": "Annex",
  "version": "0.0.1",
  "identifier": "com.annex.desktop",
  "build": {
    "beforeBuildCommand": "node ../../scripts/build-desktop.js",
    "beforeDevCommand": "node ../../scripts/prepare-zk-dev.js && npm --prefix ../../client run dev",
    "frontendDist": "../../client/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Annex",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "url": "index.html",
        "backgroundColor": "#000000",
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": "default-src 'self' tauri: https://tauri.localhost; connect-src * ws: wss:; img-src 'self' data: blob: http: https:; media-src 'self' blob: data: mediastream: http: https:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src 'self' 'unsafe-eval' 'wasm-unsafe-eval' blob:; worker-src 'self' blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../zk/keys/membership_vkey.json",
      "../../assets/piper",
      "../../assets/voices"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both",
        "installerHooks": "nsis/hooks.nsi"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      }
    }
  }
}
